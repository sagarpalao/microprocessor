DATA SEGMENT
	ARR DB 01H,02H,03H,04H
DATA ENDS

EXTRA SEGMENT
	ARR1 DB 4 DUP(?)
EXTRA ENDS

CODE SEGMENT
	ASSUME CS:CODE,DS:DATA
	START:
			MOV AX,DATA
			MOV DS,AX
			MOV SI,OFFSET ARR
			MOV DI,OFFSET ARR1
			MOV CX,0004H
			CLD
			REP MOVSB
                MOV AH,4CH
                INT 21H
CODE ENDS
END START
END
